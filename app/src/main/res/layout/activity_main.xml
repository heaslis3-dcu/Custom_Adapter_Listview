    <TextView
        android:id="@+id/txtViewOrderPres"
        style="@style/OrderPrescripTextView"
        android:background="@color/colorTVBackground"
        android:onClick="openPrescriptionView"
        android:text="@string/order_prescription"/>

</LinearLayout>